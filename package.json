{
    "private": "true",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "build": "cd packages/frontend && yarn build",
        "start": "lerna run start"
    },
    "name": "AfricaCovid",
    "devDependencies": {
        "concurrently": "^5.1.0",
        "lerna": "^3.20.2",
        "husky": ">=4",
        "lint-staged": ">=10",
        "prettier": "2.0.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "**/*.+(js|jsx|ts|tsx|json|css)": "prettier --write"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true
    }
}
